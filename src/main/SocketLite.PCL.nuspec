<?xml version="1.0"?>
<package >
  <metadata>
    <id>SocketLite.PCL</id>
    <version>0</version>
    <title>Socket Lite - Xamarin PCL</title>
    <authors>Jasper H. Bojsen (based on socket-for.pcl by Ryan Davis)</authors>
    <owners>Jasper H. Bojsen</owners>
    <licenseUrl>https://github.com/1iveowl/SocketLite.PCL/blob/master/LICENSE</licenseUrl>
    <projectUrl>https://github.com/1iveowl/SocketLite.PCL</projectUrl>
    <iconUrl>https://nuget.org/Content/Images/packageDefaultIcon.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Socket PCL Xamarin Cross platform for iOS, Windows 10 (UWP) and Android </description>
    <releaseNotes>
Moved from to .NET Standard 1.2 for better compatibility. 
Changed Android Target Framework from 7.0 (Nougat) to 6.0 (Marshmallow) for better compatibility. 
Implemented optional parameter to choose between Tls 1.0, 1.1 and 1,2 in TcpClient ConnectAsync</releaseNotes>
    <copyright>Copyright 2016</copyright>
    <tags>Socket, Tcp, Udp, Xamarin, PCL, ios, android, uwp, windows 10</tags>
    <dependencies>

        <group targetFramework="portable-net45+netcore45">
          <dependency id="System.Reactive" version="3.0.0" />
        </group>

        <group targetFramework="uap10.0">
          <dependency id="System.Reactive" version="3.0.0" />
          <dependency id="Microsoft.NETCore.UniversalWindowsPlatform" version="5.2.2" />
      </group>
    </dependencies>
  </metadata>
  <files>
  <!--.NET Standard 1.2 - Ref (Bait) -->
      <file src="SocketLite.PCL\bin\Release\*.dll" target="ref\netstandard1.2" exclude="**\System.Reactive"/>
      <file src="SocketLite.PCL\bin\Release\*.pdb" target="ref\netstandard1.2" exclude="**\System.Reactive"/>
      <file src="SocketLite.PCL\bin\Release\*.xml" target="ref\netstandard1.2" exclude="**\System.Reactive"/>
          
<!--Xamarin.Android-->
		<file src="Socket.CrossPlatform\SocketLite.PCL.Android\bin\Release\*.dll" target="lib\MonoAndroid10" exclude="**\System.Reactive.*" />
		<file src="Socket.CrossPlatform\SocketLite.PCL.Android\bin\Release\*.pdb" target="lib\MonoAndroid10" exclude="**\System.Reactive.*" />
